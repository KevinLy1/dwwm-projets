            <th>Voir</th>
            <th>√âditer</th>
            <th>Supprimer</th>
        </thead>

        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.idUser.username }} ({{ order.idUser.firstName }} {{ order.idUser.name }})</td>
                    <td>
                        <ul class="mb-0">
